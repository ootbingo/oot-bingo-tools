{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "bundler",
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__",
    "src/sandbox"
  ]
}