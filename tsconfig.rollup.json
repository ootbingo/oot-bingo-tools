{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": false,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__",
    "src/sandbox"
  ]
}